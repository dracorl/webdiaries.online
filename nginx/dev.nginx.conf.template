map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}


error_log /var/log/nginx/error.log debug;

server {
    listen 80;
    server_name webdiaries.online www.webdiaries.online;
    
    location / {
        proxy_pass http://user-dashboard:${VITE_USER_DASHBOARD_PORT};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
    location ~* ^/(vite|__vite_ping|@vite) {
        proxy_pass http://user-dashboard:${VITE_USER_DASHBOARD_PORT};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}

server {
    listen 80;
    server_name api.webdiaries.online;
    
    location / {
        proxy_pass http://blog-service:${BLOG_SERVICE_PORT};
        proxy_set_header Host $host;
